<header class="masthead" style="background-image: url('/assets/img/{% block hero %}{% endblock %}')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-10 col-xl-10">
                <div class="site-heading">
                    <h1 class="mainTitle">{% block mainTitle %}{% endblock %} </h1>
                    <span class="subheading">{% block subHeading %}{% endblock %}</span>
                </div>
            </div>
        </div>
    </div>
</header>
