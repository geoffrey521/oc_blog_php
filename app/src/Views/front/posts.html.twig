{% extends 'layout/layout.html.twig' %}

{% block head %}
    Tous les articles
{% endblock %}

{% block content %}
    <h1>Tous nos articles</h1>
    {% if posts is not empty %}
        {% for post in posts %}
            <article class="mb-4">
                <div class="container px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="post-preview">
                                <a href="{{ generate_route('singlePost', { slug:post.slug }) }}">
                                    <h2 class="post-title">{{ post.title }}</h2>
                                    <h3 class="post-subtitle">{{ post.excerpt }}</h3>
                                </a>
                                <p class="post-meta">
                                    Post√© le {{ post.last_update|date("d / m / Y") }}
                                </p>
                                <p><a href="{{ generate_route('singlePost', { slug:post.slug }) }}" class="see-more">En voir plus</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
            <!-- Divider -->
            <hr class="my-4" />
        {% endfor %}
        <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Plus d'articles</a></div>
    {% endif %}
{% endblock %}
